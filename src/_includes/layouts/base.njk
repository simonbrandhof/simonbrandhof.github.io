---
layout: layouts/skeleton.njk
---
<div class="lg:flex">
	<aside class="lg:flex lg:flex-col lg:h-screen lg:sticky lg:top-0 lg:flex-initial">
		<header class="text-5xl sm:text-7xl text-white font-bold flex-nowrap whitespace-nowrap font-serif p-6 lg:p-10 lg:pr-20">
			{% include "./" + page.lang + "/_title.html" %}
		</header>
		<div class="pt-14 text-xl lg:flex-grow print:hidden p-6 lg:p-10">
			<ul class="flex flex-row gap-x-3 lg:flex-col flex-wrap">
				{% for p in collections.page %}
					{% if p.data.lang == page.lang %}
						<li class="whitespace-nowrap">
							<a href="{{ p.url }}" class="{% if p.page.url != page.url %}underline{% endif %} hover:underline hover:decoration-double" {% if p.page.url == page.url %}aria-current="page"{% endif %}>{{ p.data.title }}</a>
							{% if p.data.icon != undefined %}
								<img src="{{ p.data.icon }}" class="inline h-5 w-5" alt="">
							{% endif %}
						</li>
					{% endif %}
				{% endfor %}
			</ul>
		</div>
		<footer class="max-lg:fixed max-lg:bottom-0 max-lg:bg-stone-800 max-lg:py-4 max-lg:w-full print:hidden">
			<div class="flex flex-row gap-2">
					<span class="">{{ messages[page.lang].language }}</span>
					{% for link in page.url | locale_links %}
						<a rel="alternate" hreflang="{{ link.lang }}" href="{{ meta.url }}{{ link.url }}"
							 class="underline hover:decoration-double">{{ messages[link.lang].language }}
						</a>
					{% endfor %}
			</div>
		</footer>
	</aside>
	<main class="lg:flex-1 p-6 lg:p-10 pb-20">
		{{ content | safe }}
	</main>
</div>
